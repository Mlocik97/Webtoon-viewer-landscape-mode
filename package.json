{
  "name": "webtoon-landscape-mode",
  "version": "0.1.0",
  "description": "Extension, that allows you rotate viewer, so it's easy to read landscape webtoon episodes on desktop",
  "main": "src/index.js",
  "scripts": {
    "build": "cd src; zip -r ../output.zip *",
    "test": "node test.js",
    "lint": "rettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "check": "tsc -p ./jsconfig.json"
  },
  "keywords": [
    "Webtoon",
    "rotate",
    "landscape",
    "viewer"
  ],
  "author": "Mlocik97",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/chrome": "^0.0.217",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jsdom": "^21.1.0",
    "node-fetch": "^3.3.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5",
    "uvu": "^0.5.6"
  }
}

{
	"name": "webtoon-landscape-mode",
	"version": "0.4.0",
	"description": "Extension, that allows you rotate viewer, so it's easy to read landscape webtoon episodes on desktop",
	"main": "src/index.js",
	"scripts": {
		"build": "cd src; zip -r ../extension.zip *",
		"test": "node test.js",
		"lint": "prettier --ignore-path .gitignore --check . && eslint",
		"format": "prettier --ignore-path .gitignore --write .",
		"check": "tsc -p ./jsconfig.json"
	},
	"keywords": [
		"Webtoon",
		"rotate",
		"landscape",
		"viewer"
	],
	"author": "Mlocik97",
	"license": "MIT",
	"type": "module",
	"devDependencies": {
		"@eslint/compat": "^1.3.0",
		"@types/chrome": "^0.0.326",
		"@types/firefox-webext-browser": "^120.0.4",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.5.0",
		"globals": "^16.2.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3",
		"uvu": "^0.5.6"
	}
}
